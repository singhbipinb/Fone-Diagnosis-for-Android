<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".vibration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonvib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/round_button"
            android:onClick="vibclick"
            android:text="Start Test"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:visibility="visible" />

        <GridLayout
            android:id="@+id/gd1vib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:stretchMode="columnWidth"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tvvib1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="How many times phone vibrated?"
                android:textColor="#FBF9F9"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/valuevib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="30dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#040000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonvibcheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/round_button"
                    android:onClick="anssub"
                    android:text="Submit"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp" />

            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textresvib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/resimgvib"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="30dp" />

            <TextView
                android:id="@+id/restextvib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>